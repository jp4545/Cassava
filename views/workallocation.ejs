  function searchresultwork1()
  { $("#mytablework").show();
          $.ajax({
                  type: "POST",
                  url: "/fetchwork",
                  success: function(docs) {
                   populateswork(docs);
                },
                error: function(jqXHR, textStatus, err) {
                  alert('text status '+textStatus+', err '+err)
                }
            });
  }

function populateswork(docs)
 {
  $('#mytablework tr').not(':first').remove();
      var html = '';
      $.each(docs, function (i) {
          var num=i+1;
          html += '<tr><td>' + num
           + '</td><td>' + eval(JSON.stringify(docs[i].workallocation))
            + '</td><td>' + eval(JSON.stringify(docs[i].supername))
           + '</td></tr>';
        });
  $('#mytablework tr').first().after(html);
 }

 });
</script>
    
